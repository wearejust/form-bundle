{% block wearejust_readonly_widget %}
    <span style="padding: 0.75em 1em; display:block;">
        {{ field | render_view_element(object) }}
    </span>
{% endblock wearejust_readonly_widget %}

{% block wearejust_limitedtextarea_row %}
    <div class="js-countable">
        {{ block('form_row') }}
    </div>
{% endblock wearejust_limitedtextarea_row %}

{% block wearejust_limitedtextarea_widget %}
    {% set attr = attr|merge({'data-length': length|trim}) %}
      {{- block('textarea_widget') -}}
      <small class="counter-text">{{ 'Character Count' | trans({}, 'WearejustFormBundle') }} <span class="js-countable-total"></span></small>
{% endblock wearejust_limitedtextarea_widget %}

{% block wearejust_switcher_label %}
    {{- block('form_label') -}}
{% endblock wearejust_switcher_label %}

{% block wearejust_switcher_widget %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endblock wearejust_switcher_widget %}
